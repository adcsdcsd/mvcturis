@model List<Kempery.Models.Usuario>

@{
    ViewData["Title"] = "Usuarios";
}

@if (TempData["ContratoUrl"] != null)
{
    <script>
        window.open('@TempData["ContratoUrl"]', '_blank');
    </script>
}


<h2 class="text-white">Lista de Usuarios</h2>

<!-- ‚úÖ Buscador -->
<form asp-action="Index" method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="search" class="form-control" placeholder="Buscar por nombre, c√©dula, ciudad..." value="@Context.Request.Query["search"]" />
        <button type="submit" class="btn btn-outline-light">Buscar</button>
    </div>
</form>

<!-- Bot√≥n que abre el modal -->
<button class="btn btn-primary mb-3" data-bs-toggle="modal" data-bs-target="#exampleModalToggle">Agregar Usuario</button>

<!-- ‚úÖ Tabla de usuarios -->
@if (Model.Any())
{
    <table class="table table-dark table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>C√©dula</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Email</th>
                <th>Celular</th>
                <th>Ciudad</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Usuario in Model)
            {
                <tr>
                    <td>@Usuario.Id</td>
                    <td>@Usuario.Cedula</td>
                    <td>@Usuario.Nombre</td>
                    <td>@Usuario.Apellido</td>
                    <td>@Usuario.CorreoElectronico</td>
                    <td>@Usuario.Celular</td>
                    <td>@Usuario.Ciudad</td>
                    <td>
                        <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@Usuario.Id">Detalles</a>
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@Usuario.Id">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">No se encontraron usuarios.</div>
}

<!-- ‚úÖ Modal para agregar usuario -->
<div class="modal fade" id="exampleModalToggle" tabindex="-1" aria-labelledby="exampleModalToggleLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content text-dark">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalToggleLabel">Agregar Usuario</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>

            <form asp-action="Create" method="post" class="modal-body">
                <div class="row g-3">
    <div class="col-md-6">
        <label class="form-label">C√©dula</label>
        <input class="form-control" name="Cedula" required />
    </div>
    <div class="col-md-6">
        <label class="form-label">Nombre</label>
        <input class="form-control" name="Nombre" required />
    </div>
    <div class="col-md-6">
        <label class="form-label">Apellido</label>
        <input class="form-control" name="Apellido" required />
    </div>
    <div class="col-md-6">
        <label class="form-label">Correo</label>
        <input class="form-control" type="email" name="CorreoElectronico" required />
    </div>
    <div class="col-md-6">
        <label class="form-label">Celular</label>
        <input class="form-control" name="Celular" />
    </div>

    <!-- Aqu√≠ agregamos Cotitular -->
    <div class="col-md-6">
        <label class="form-label">Cotitular</label>
        <input class="form-control" name="Cotitular" />
    </div>

    <div class="col-md-6">
        <label class="form-label">Fecha de Nacimiento</label>
        <input class="form-control" type="date" name="FechaNacimiento" />
    </div>
    <div class="col-md-6">
        <label class="form-label">Ciudad</label>
        <input class="form-control" name="Ciudad" />
    </div>
    <div class="col-md-6">
        <label class="form-label">Estado Civil</label>
        <input class="form-control" name="EstadoCivil" />
    </div>
    <div class="col-md-6">
        <label class="form-label">Foto (URL)</label>
        <input class="form-control" name="Foto" />
    </div>
    <div class="col-md-6">
        <label class="form-label">Contrase√±a</label>
        <input class="form-control" type="password" name="Password" required />
    </div>

    <!-- üîΩ Nuevos campos -->
    <div class="col-md-4">
        <label class="form-label">Noches</label>
        <input class="form-control" type="number" name="Noches" />
    </div>
    <div class="col-md-4">
        <label class="form-label">Regalo Nacional</label>
        <input class="form-control" name="RNacional" />
    </div>
    <div class="col-md-4">
        <label class="form-label">Regalo Internacional</label>
        <input class="form-control" name="RInternacional" />
    </div>
    <div class="col-md-4">
        <label class="form-label">Cuotas</label>
        <input class="form-control" type="number" name="Cuotas" />
    </div>
    <div class="col-md-4">
        <label class="form-label">Volumen</label>
        <input class="form-control" type="number" step="0.01" name="Volumen" />
    </div>
    <div class="col-md-4">
        <label class="form-label">Cash</label>
        <input class="form-control" type="number" step="0.01" name="Cash" />
    </div>
    <div class="col-md-4">
        <label class="form-label">A√±o</label>
        <input class="form-control" type="number" name="Anio" />
    </div>
</div>


                <div class="modal-footer mt-3">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                </div>
            </form>
        </div>
    </div>
</div>
