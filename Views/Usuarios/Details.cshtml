@model Kempery.Models.Usuario

<h2>Editar Usuario</h2>

<form asp-action="Edit" asp-controller="Usuarios" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="card bg-dark text-light p-4">
        <div class="row mb-3">
            <div class="col-md-6">
                <label class="form-label">C√©dula</label>
                <input asp-for="Cedula" class="form-control" />
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label class="form-label">Nombre</label>
                <input asp-for="Nombre" class="form-control" />
            </div>
            <div class="col-md-6">
                <label class="form-label">Apellido</label>
                <input asp-for="Apellido" class="form-control" />
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label class="form-label">Correo Electr√≥nico</label>
                <input asp-for="CorreoElectronico" class="form-control" />
            </div>
            <div class="col-md-6">
                <label class="form-label">Celular</label>
                <input asp-for="Celular" class="form-control" />
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label class="form-label">Cotitular</label>
                <input asp-for="Cotitular" class="form-control" />
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label class="form-label">Fecha de Nacimiento</label>
                <input asp-for="FechaNacimiento" class="form-control" type="date" />
            </div>
            <div class="col-md-6">
                <label class="form-label">Ciudad</label>
                <input asp-for="Ciudad" class="form-control" />
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label class="form-label">Estado Civil</label>
                <input asp-for="EstadoCivil" class="form-control" />
            </div>
            <div class="col-md-6">
                <label class="form-label">Contrase√±a</label>
                <input asp-for="Password" class="form-control" type="password" placeholder="Escribe nueva contrase√±a (opcional)" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>

        <!-- üîΩ Agrupaci√≥n: Volumen, Cash, A√±o, Noches, Cuotas -->
        <div class="row mb-3">
            <div class="col-md-2">
                <label class="form-label">Volumen</label>
                <input asp-for="Volumen" class="form-control" type="number" step="0.01" />
            </div>
            <div class="col-md-2">
                <label class="form-label">Cash</label>
                <input asp-for="Cash" class="form-control" type="number" step="0.01" />
            </div>
            <div class="col-md-2">
                <label class="form-label">A√±o</label>
                <input asp-for="Anio" class="form-control" type="number" />
            </div>
            <div class="col-md-3">
                <label class="form-label">Noches</label>
                <input asp-for="Noches" class="form-control" type="number" />
            </div>
            <div class="col-md-3">
                <label class="form-label">Cuotas</label>
                <input asp-for="Cuotas" class="form-control" type="number" />
            </div>
        </div>

       
            <div class="row mb-4">
   
</div>
    

            <div class="col-md-6">
                <label class="form-label">Regalo Internacional</label>
                <input asp-for="RInternacional" class="form-control" />
            </div>
        </div>

        <!-- ‚úÖ Foto al final -->
        <div class="mb-3">
            <label class="form-label">Foto actual:</label><br />
            @if (!string.IsNullOrEmpty(Model.Foto))
            {
                <img src="@Model.Foto" alt="Foto" width="120" class="mb-2 rounded shadow" /><br />
                <a href="@Model.Foto" target="_blank" class="text-info">Ver en nueva pesta√±a</a>
            }
            else
            {
                <span>Sin Foto</span>
            }

            <label class="form-label mt-3">Actualizar Foto (URL):</label>
            <input asp-for="Foto" class="form-control" placeholder="https://..." />
        </div>

        <div class="text-end">
            <button type="submit" class="btn btn-success">Guardar Cambios</button>
            <a class="btn btn-secondary ms-2" asp-action="Index">Cancelar</a>
        </div>
    </div>
</form>
